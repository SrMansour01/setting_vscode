{
  //debug
  "debug.console.fontFamily": "Fira Code",
  "debug.console.fontSize": 16,
  "debug.saveBeforeStart": "nonUntitledEditorsInActiveGroup",
  "debug.terminal.clearBeforeReusing": true,
  //extencion
  "extensions.autoCheckUpdates": true,
  "extensions.autoUpdate": "onlyEnabledExtensions",
  //file
  "files.autoSave": "onWindowChange",
  "files.insertFinalNewline": true,
  //thema
  "workbench.iconTheme": "material-icon-theme",
  "workbench.colorTheme": "Dracula",
  //cursor
  "editor.cursorStyle": "line-thin",
  "editor.cursorWidth": 0,
  "editor.cursorBlinking": "expand",
  "editor.cursorSurroundingLinesStyle": "default",
  //terminal
  "terminal.integrated.enableMultiLinePasteWarning": false,
  "terminal.integrated.fontSize": 16,
  "terminal.integrated.fontFamily": "Fira Code",
  "terminal.external.windowsExec": "C:\\Windows\\System32\\cmd.exe",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.cursorWidth": 1,
  "terminal.integrated.fontWeight": "100",
  "terminal.integrated.lineHeight": 0.5,
  "terminal.integrated.scrollback": 500,
  //editor
  "editor.lineHeight": 1.45,
  "editor.lineNumbers": "on",
  "editor.fontSize": 16,
  "editor.fontFamily": "Fira Code",
  "editor.fontWeight": "100",
  "editor.fontLigatures": true,
  "editor.renderLineHighlight": "gutter",
  "editor.padding.top": 10,
  "editor.padding.bottom": 10,
  "editor.tabCompletion": "onlySnippets",
  "editor.tabSize": 2,
  "workbench.editor.showTabs": true,
  //scroll
  "editor.scrollbar.horizontal": "auto",
  "editor.scrollbar.horizontalScrollbarSize": 5,
  "editor.scrollbar.vertical": "auto",
  "editor.scrollbar.verticalScrollbarSize": 5,
  //geral
  "explorer.confirmDragAndDrop": false,
  "workbench.startupEditor": "none",
  //minimap
  "editor.minimap.maxColumn": 80,
  "editor.minimap.side": "left",
  "editor.minimap.scale": 1,
  "editor.minimap.size": "fit",
  "editor.minimap.renderCharacters": false,
  "editor.minimap.showSlider": "mouseover",
  "editor.minimap.enabled": true,
  //css
  "css.completion.completePropertyWithSemicolon": true,
  "css.format.spaceAroundSelectorSeparator": false,
  "css.lint.float": "warning",
  //html
  "html.autoClosingTags": true,
  //JavaScript
  "javascript.autoClosingTags": true,
  "javascript.format.enable": true,
  "javascript.format.insertSpaceAfterCommaDelimiter": true,
  "javascript.preferences.importModuleSpecifier": "relative",
  "javascript.suggest.autoImports": true,
  "javascript.suggest.completeJSDocs": true,
  "javascript.suggest.enabled": true,
  //python
  "python.envFile": "${workspaceFolder}/.env",
  "python.globalModuleInstallation": true,
  "python.linting.lintOnSave": true,
  "python.pipenvPath": "pipenv",
  "python.terminal.activateEnvInCurrentTerminal": true,
  "python.terminal.activateEnvironment": true,
}
